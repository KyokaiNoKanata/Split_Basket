<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed: use active text color for immediate feedback -->
    <item android:state_pressed="true" android:color="@color/nav_active_text" />
    <!-- Selected: active page text color (usually white) -->
    <item android:state_checked="true" android:color="@color/nav_active_text" />
    <!-- Default: theme primary color -->
    <item android:color="?attr/colorPrimary" />
</selector>
