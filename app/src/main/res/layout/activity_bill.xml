<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 移除右上角品牌徽标 -->

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- 统一的大标题 -->
            <TextView
                android:id="@+id/pageTitleBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PageTitleText"
                android:text="@string/bill_splitting"
                android:paddingBottom="12dp"
                tools:ignore="HardcodedText"/>

            <!-- Removed duplicate page title; toolbar already shows app title -->

            <!-- Recent bills -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_bills"
                android:textStyle="bold"
                android:paddingBottom="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUnpaidBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weekend_gathering" android:textStyle="bold" style="@style/ListItemText" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/placeholder_amount" android:textSize="15sp" android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unpaid"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaidBill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                android:layout_marginBottom="8dp"
                android:clickable="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/daily_purchases" android:textStyle="bold" style="@style/ListItemText" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/placeholder_amount2" android:textSize="15sp" android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paid"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaidBill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                android:layout_marginBottom="8dp"
                android:clickable="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dinner" android:textStyle="bold" style="@style/ListItemText" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/placeholder_amount3" android:textSize="15sp" android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paid"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Create a new bill -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new bill"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <EditText
                        android:id="@+id/inputBillName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bill Name" />
                    <EditText
                        android:id="@+id/inputTotalSpent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total spent"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/split_payment_method"
                        android:paddingTop="8dp" />

                    <RadioGroup
                        android:id="@+id/radioSplitMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:checkedButton="@id/radioEqual">
                        <RadioButton
                            android:id="@+id/radioEqual"
                            style="@style/SplitMethodRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/equal" />
                        <RadioButton
                            android:id="@+id/radioByQuantity"
                            style="@style/SplitMethodRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/by_quantity" />
                        <RadioButton
                            android:id="@+id/radioByItem"
                            style="@style/SplitMethodRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/by_item" />
                        <RadioButton
                            android:id="@+id/radioCustom"
                            style="@style/SplitMethodRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/custom" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/members"
                        android:paddingTop="8dp" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/name_of_members" />
                        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/name_of_members" />
                        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/name_of_members" />
                        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/name_of_members" />
                        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_new_bill"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar with slider -->
    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <LinearLayout
            android:id="@+id/bottomBarContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    style="@style/BottomNavButton"
                    android:checkable="true"
                    android:textColor="@color/bottom_nav_tint"
                    app:iconTint="@color/bottom_nav_tint"
                    app:iconGravity="textTop"
                    android:background="@drawable/button_background_selector"
                    app:icon="@drawable/ic_home" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inventory"
                    style="@style/BottomNavButton"
                    android:checkable="true"
                    android:textColor="@color/bottom_nav_tint"
                    app:iconTint="@color/bottom_nav_tint"
                    app:iconGravity="textTop"
                    android:background="@drawable/button_background_selector"
                    app:icon="@drawable/ic_inventory" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/list"
                    style="@style/BottomNavButton"
                    android:checkable="true"
                    android:textColor="@color/bottom_nav_tint"
                    app:iconTint="@color/bottom_nav_tint"
                    app:iconGravity="textTop"
                    android:background="@drawable/button_background_selector"
                    app:icon="@drawable/ic_list" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bill"
                    style="@style/BottomNavButton"
                    android:checkable="true"
                    android:checked="true"
                    android:textColor="@color/bottom_nav_tint"
                    app:iconTint="@color/bottom_nav_tint"
                    app:iconGravity="textTop"
                    android:background="@drawable/button_background_selector"
                    app:icon="@drawable/ic_bill" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
