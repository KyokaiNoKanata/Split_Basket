<resources>
    <!-- 页面标题文字样式：居中、加粗、大字体 -->
    <style name="PageTitleText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- 主操作按钮样式：圆形背景、白色文字 -->
    <style name="PrimaryActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 结算方式选择的单选按钮样式：自定义颜色和大小 -->
    <style name="SplitMethodRadio" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

    <!-- 列表项文字样式：标准大小，可选加粗 -->
    <style name="ListItemText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- 底部导航栏按钮样式：增大字体并加粗 -->
    <style name="BottomNavButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--部分弹窗所需样式-->
    <style name="BorderlessActionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="background">@android:color/transparent</item>
    </style>
</resources>